<All_butt@Button>:
    font_size: '35sp'


<CalcLayout>:
    id:calc
    display: input
    popup: popup.__self__


    BoxLayout:
        orientation: 'vertical'
        id:bl

        Label:
            id: input
            bold: True
            text_size: self.size
            font_size: '50sp'
            halign: 'right'
            valign: 'middle'
            size_hint: 1, .2



        Popup:
            id: popup
            on_parent: if self.parent == bl: bl.remove_widget(self)
            size_hint: 0.7, 0.7
            title:  "Calculator 1.0"
            title_align: 'center'
            title_size: '24sp'
            content: info
            #on_release: popup.dismiss()
            Label:
                id:info
                text: "Writen by \nPukas Bohdan \n using Python"

        BoxLayout:
            padding:5, 5, 5, 0
            spacing:2
            size_hint: 1, .2

            All_butt:
                text: 'i'
                on_press: root.popup.open()

            All_butt:
                text: 'C'
                on_press: input.text = ""


        GridLayout:
            rows:4
            cols:4
            padding:5
            spacing:2

            All_butt:
                text: '7'
                on_press: input.text += self.text
            All_butt:
                text: '8'
                on_press: input.text += self.text
            All_butt:
                text: '9'
                on_press: input.text += self.text
            All_butt:
                text: '/'
                on_press: input.text += self.text


            All_butt:
                text: '4'
                on_press: input.text += self.text
            All_butt:
                text: '5'
                on_press: input.text += self.text
            All_butt:
                text: '6'
                on_press: input.text += self.text
            All_butt:
                text: '*'
                on_press: input.text += self.text


            All_butt:
                text: '1'
                on_press: input.text += self.text
            All_butt:
                text: '2'
                on_press: input.text += self.text
            All_butt:
                text: '3'
                on_press: input.text += self.text
            All_butt:
                text: '-'
                on_press: input.text += self.text


            All_butt:
                text: '0'
                on_press: input.text += self.text
            All_butt:
                text: '.'
                on_press: input.text += self.text
            All_butt:
                text: '='
                on_press: calc.calculate(input.text)
            All_butt:
                text: '+'
                on_press: input.text += self.text
